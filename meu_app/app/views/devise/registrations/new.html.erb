
<body class="min-h-screen bg-gradient-to-br from-pink-100 via-purple-100 to-blue-100 flex items-center justify-center">
  <div class="bg-white rounded-2xl shadow-lg p-8 w-full max-w-md mx-4">
    
    <h2 class="text-3xl font-bold text-center text-gray-700 mb-6">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-gray-600 font-medium mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
              class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-300 focus:border-transparent outline-none transition" %>
      </div>

      <div>
        <%= f.label :password, class: "block text-gray-600 font-medium mb-1" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-300 focus:border-transparent outline-none transition" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-gray-600 font-medium mb-1" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-4 py-2 mt-1 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-300 focus:border-transparent outline-none transition" %>
      </div>

      <div class="pt-4">
        <%= f.submit "Sign up", class: "w-full py-2 px-4 rounded-lg bg-gradient-to-r from-pink-300 via-purple-300 to-blue-300 text-gray-800 font-semibold shadow-md hover:opacity-90 transition" %>
      </div>
    <% end %>

    <div class="text-center mt-6 text-gray-600 text-sm">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</body>
